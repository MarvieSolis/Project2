<div class="row justify-content-center">

    <!--Author image, name, and voting on left side of post-->
    <div class="col-md-3">
        <div class="row justify-content-center">
            <img class="userPostImage" src="/images/userPlaceholder.jpg">
        </div>
        <div class="row justify-content-center">
            <h6 class="userPostName">{{data.User.dataValues.username}}</h6>
        </div>
        <div class="row justify-content-center">
            <span>
                <button class="upvoteButton">
                    <i class="fas fa-chevron-circle-up"></i>
                </button>
                <h4 class="voteValue">{{data.upvotes}}</h4>
                <button class="downvoteButton">
                    <i class="fas fa-chevron-circle-down"></i>
                </button>
            </span>
        </div>
    </div>

    <!--Author's post-->
    <div class="col-md-6">
        <div class="userPostBody">

            <!--Heading: Title / date posted-->
            <span class="userPostHeading">
                <a class="userPostPreview" href="/post/" {{{id}}} target="_blank">
                    <h3 class="userPostTitle" value={{data.id}}>{{data.title}}</h3>
                </a> -
                <h4 class="userPostTimeStamp">{{data.createdAt}} - #{{data.CategoryId}}</h4>
            </span>
            <hr id="postLineBreak">

            <!--Post body containing text and/or images-->
            <div class="userPostTextBody">
                <p>
                    {{data.content}}
                </p>
            </div>

            <!--Preview of amount of comments-->
            <hr id="postLineBreak">

            <h4 class="userPostCommentsPreview">{{data.commentsAmount}}</h4>
            <div class="commentBox">
                <form>
                    <div class="form-group">
                        <textarea class="form-control" id="comment" rows="3"></textarea>
                    </div>
                    <button class="btn addBtn">Add Comment</button>
                </form>
            </div>
            <div class="userPostsComments">
                <div class="row">
                    <div class="col-md-3">
                        <h5 class="userPostsCommentsName">{{data.comment.name}}</h5>
                    </div>
                    <div class="col-md-9">
                        <p class="userPostsCommentsText">{{data.comment.text}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/comment.js"></script>