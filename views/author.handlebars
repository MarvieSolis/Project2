{{!-- USER SUBMITS A NEW POST --}}
<div id="createPost">
  <div class="container">

    <div class="row">
      <div class="col-md-3">
        <div class="row justify-content-center">
          <h4 class="segoeFont"> {{msg}} </h4>
        </div>
      </div>

      <div class="col-md-9">
        <div id="postContainer" class="container">
          <div class="row">
            <div class="col-12">
              <form class="clearfix mb-4" action="/signup" method="POST">

                <div class="form-group">
                  <label for="username">
                    <h4 class="segoeFont">New User Sign-Up</h4>
                  </label>
                  <input type="text" name="username" id="username" class="form-control" aria-describedby="username" placeholder="Create a username">
                </div>

                <div class="form-group">
                  <label for="password"></label>
                  <input type="password" name="password" id="password" class="form-control" aria-describedby="password" placeholder="Create a password">
                </div>

                <span>
                  <input type="checkbox" id="checkbox" onclick="hidePassword1()" class="float-left">
                  <p id="checkbox1">Show Password</p>
                  <button id="submit" type="submit" class="btn btn-danger float-right">Sign-Up</button>
                </span>
              </form>

              <form class="clearfix mb-4" action="/signin" method="post">

                <div class="form-group">
                  <label for="newUser">
                    <h4 class="segoeFont">Existing User Log-in</h4>
                  </label>
                  <input type="text" name="username" id="usernameLogin" class="form-control" aria-describedby="username" placeholder="Username">
                </div>

                <div class="form-group">
                  <label for="password"></label>
                  <input type="password" name="password" id="passwordLogin" class="form-control" aria-describedby="password" placeholder="Password">
                </div>
                {{message}}
                <span>
                  <input type="checkbox" id="checkbox" onclick="hidePassword2()" class="float-left">
                  <p id="checkbox1">Show others your secrets ( ͡° ͜ʖ ͡°)</p>
                  <button id="submitLogin" type="submit" class="btn btn-danger float-right">Log-In</button>
                </span>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
